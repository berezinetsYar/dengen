@{
    Layout = null;
}

<style>
    #sidebar {
        margin-top: 0px;
        position:fixed;
        top:0;
    }
</style>
<div class="sidebar app-aside" id="sidebar">
    <div class="sidebar-container perfect-scrollbar">
        <nav>
            <div class="navbar-title">
                <h4>Меню</h4>
            </div>
            <ul class="main-navigation-menu">
                <li class="open">
                    <a href="../Home/Index">
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Главная</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="open">
                    <a href="../News/News">
                        <!--///////////////////////////////////////////////////-->
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Новости</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="open">
                    <a href="../Doc/ViewDoc">
                        <!--///////////////////////////////////////////////////-->
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Документы</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="open">
                    <a href="../Reminder">
                        <!--///////////////////////////////////////////////////-->
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Напоминания</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="open">
                    <a href="../Mission">
                        <!--///////////////////////////////////////////////////-->
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Поручения</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="open">
                    <a href="../Account/Logout">
                        <!--///////////////////////////////////////////////////-->
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-home"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Выйти</span>
                            </div>
                        </div>
                    </a>
                </li>
                @if (Context.User.Identity.Name == "Admin")
                {
                    <li class="active open">
                        <a href="../Account/Register">
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="ti-home"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title">Добавить пользователя </span>
                                </div>
                            </div>
                        </a>
                    </li>

                    <li class="active open">
                        <a href="../News/Tags">
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="ti-home"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title">Добавить теги</span>
                                </div>
                            </div>
                        </a>
                    </li>
                }

            </ul>
            <img src="~/Content/ффф.gif" style="margin-left:25px;width:200px;" />
        </nav>
        
    </div>
</div>

