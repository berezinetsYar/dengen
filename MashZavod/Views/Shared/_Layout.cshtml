<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />
</head>

<body>
   
        @RenderBody()

        <footer>
            <script>
                jQuery(document).ready(function () {
                    Main.init();
                    Index.init();
                });
            </script>

            <div class="row" style="position: fixed;right:20px;bottom:20px; z-index:1;">
                <div id="idrow">
                    @Html.Action("Index", "BigChat")
                </div>
                <a id="id_href" class="btn btn-wide btn-success" onclick="func23()" style="position:relative; bottom:-14px;">Скрыть чат</a>
            </div>

            <script>
                function func23() {
                    var el = document.getElementById('idrow');
                    var link = document.getElementById('id_href');
                    if (el.style.display != "none") {
                        el.style.display = "none";
                        link.innerText = "Раскрыть чат";
                    }
                    else {
                        el.style.display = "block";
                        link.innerText = "Скрыть чат";
                    }
                }
            </script>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
        @RenderSection("scripts", required: false)

</body>
</html>
