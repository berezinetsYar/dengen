 
<ul class="commnet">
    @foreach (var b in ViewBag.Comments)
    {
        <li class="left clearfix">
            <span class="chat-img pull-left">
                <img src="http://placehold.it/50/55C1E7/fff&text=М" alt="User Avatar" class="img-circle" />
            </span>
            <div class="chat-body clearfix">
                <div class="header">
                    <strong class="primary-font">@b.LoginUs</strong> <small class="pull-right text-muted">
                        <span class="glyphicon glyphicon-time"></span>@b.Time_comments
                    </small>
                </div>
                <p>@b.Text_comments</p>
            </div>
        </li>
    }
</ul>