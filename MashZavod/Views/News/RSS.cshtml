@Html.Partial("nav")
@model MashZavod.Models.DbModels.SourcesRSS

<div class="row">
    <div class="col-lg-6 col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading">
                <h5 class="panel-title">Добавить RSS</h5>
            </div>
            <div class="panel-body">
                <p class="text-small margin-bottom-20">
                    описание
                </p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Введите ссылку" name="Link" />
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Введите описание" name="Description" />
                    </div>
                    <input type="submit" class="btn btn-o btn-primary" value="Добавить" />
                }
            </div>
        </div>
    <div class="col-md-12 margin-bottom-30">
        @{
            System.Random rand = new System.Random();
        }
        @foreach (var elem in ViewBag.Tags)
        {
            string[] str = { "default", "primary", "info", "warning", "danger" };

            int color = rand.Next(0, 4);
            string res = str[color];
            <p>  <a class="btn btn-wide btn-@res" href="~/News/TagsDel?id=@elem.ID"> @elem.Link </a></p>}
    </div>
   </div>
</div>