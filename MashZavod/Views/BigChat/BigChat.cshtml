
@{
    ViewBag.Title = "BigChat";
}

@foreach (var b in ViewBag.Chat)
{
    <p>@b.Message</p>
}

<form method="post" action="">
    <input type="text" name="message" />
    <input type="hidden" name="message" value="@ViewBag.Login" />
    <input type="hidden" name="message" value="@ViewBag.Time" />

    <input type="submit"/>
</form>